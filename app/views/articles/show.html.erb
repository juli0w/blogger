<div class="row articles">
  <div class="col s12 l8">

    <div class="article card">
      <% if @article.cover? %>
        <div clas="card-image">
          <%= image_tag @article.cover_url, alt: "Article pic" %>
        </div>
      <% end %>
      <div class="card-title"><%= link_to @article.name, blogger_article_path(@blog.slug, @article) %></div>
      <em class="card-description grey-text text-darken-2">Postado em <%= Date.today %></em>
      <div class="card-content">
        <p><%= @article.description %></p>
      </div>
      <div class="card-content">
        <p style="text-align: justify;"><%= raw @article.content %></p>
      </div>
    </div>
  </div>

  <%= render "layouts/most_viewed" %>

  <%= render "layouts/tags", tags: @article.tags %>
</div>
