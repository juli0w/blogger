<nav role="navigation" class="title-wrapper">
  <div class="nav-wrapper">
    <span class="title"><i class="arrow"></i> Configurações</span>
  </div>
</nav>

<div class="row">
  <div class="col s12">
    <div class="card-panel">
      <%= form_for @blog, url: admin_setup_path, method: :post do |f| %>
        <div class="row">
          <div class="col s12 input-field">
            <%= f.label :title %>
            <%= f.text_field :title %>
          </div>
        </div>
        <div class="row">
          <div class="col s12 input-field">
            <%= f.label :slug %>
            <%= f.text_field :slug %>
          </div>
        </div>
        <div class="row">
          <div class="col s12 input-field">
            <%= f.label :description %>
            <%= f.text_field :description %>
          </div>
        </div>

        <div class="row">
          <div class="col s12">
            <button class="btn waves-effect waves-light" type="submit" name="action">Salvar
              <i class="material-icons right">send</i>
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
